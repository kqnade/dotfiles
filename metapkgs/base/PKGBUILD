pkgname=base-env
pkgver=20260114
pkgrel=1
pkgdesc="My declarative base environment"
arch=('any')
depends=(
  'mise'
  'libyaml'
  'ghq'
  'gnupg'
  'zsh'
  'chezmoi'
  'vim'
  'neovim'
  'sheldon'
  'git-delta'
  'git-lfs'
  'github-cli'
  'glab'
  'openssh'
  'pinentry'
  'pass'
  'opencode'
  # Neovim dependencies
  'tree-sitter'
  'tree-sitter-cli'
  'luarocks'
  'lua51'
)

# Always use latest versions
pkgver() {
  date +%Y%m%d
}

package() {
  install -d "$pkgdir/usr/share/doc/$pkgname"
  echo "Applied: base-env" > "$pkgdir/usr/share/doc/$pkgname/README"
}
