{...}:
{
  opts = {
      # Search
      ignorecase = true;
      smartcase = true;
      wrapscan = true;
      # Edit
      expandtab = true;
      tabstop = 2;
      shiftwidth = 2;
      smartindent = true;
      hidden = true;
      updatetime = 100;
      swapfile = true;
      undofile = true;
      # View
      mouse = "a";
      showmode = false;
      number = true;
      cursorline = true;
      termguicolors = true;
      linebreak = true;
      showbreak = "\\";
      breakat = " 	;:,!?";
      whichwrap = "b,s,h,l,<,>,[,],~";
      breakindent = true;
    };
}
